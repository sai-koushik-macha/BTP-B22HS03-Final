{
    "name": "test_cats_each_finetune",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "MyDataset",
        "data_dir": "./example_data/cats_each",
        "shuffle": true,
        "batch_size": 1,
        "num_workers": 4,
        "rescale_range": [0.9,1.1],
        "rescale_to_crop_size_first": true,
        "crop_params": {
            "crop_size": [768,768],
            "pad": 0,
            "rot_degree_std_dev": 1
        }
    },
    "validation": {
        "shuffle": false,
        "batch_size": 3,
        "rescale_range": [1,1],
        "rescale_to_crop_size_first": true,
        "crop_params": {
            "crop_size": [768,768],
            "pad": 0,
            "random": false
        }
    },
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.0001,
        "weight_decay": 0.01
    },
    "loss": {
        "answer": "label_smoothing"
    },
    "loss_weights": {
        "answer": 1
    },
    "loss_params": {
        "answer": {
            "smoothing": 0.1,
            "padding_idx": 1
        }
    },
    "trainer": {
        "class": "QATrainer",
        "iterations": 2000,
        "accum_grad_steps": 4,
        "save_dir": "saved/",
        "val_step": 100,
        "save_step": 20000000000,
        "save_step_minor": 50,
        "log_step": 10,
        "print_pred_every": 10,
        "monitor": "val_E_ANLS",
        "monitor_mode": "max",
        
        "use_learning_schedule": "multi_rise then ramp_to_lower",
        "warmup_steps": [
            100
        ],
        "lr_down_start": 1500,
        "ramp_down_steps": 100,
        "lr_mul": 0.1
    },
    "arch": "Dessurt",
    "model": {
 	"max_a_tokens": 12
    }
}
