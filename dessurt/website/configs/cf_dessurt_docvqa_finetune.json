{
    "name": "dessurt_docvqa_finetune",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "DocVQA",
        "data_dir": "../data/DocVQA",
        "shuffle": true,
        "prefetch_factor": 5,
        "persistent_workers": true,
        "batch_size": 1,
        "num_workers": 4,
        "rescale_range": [
            0.9,
            1.1
        ],
        "rescale_to_crop_size_first": true,
        "crop_params": {
            "crop_size": [
                1152,
                768
            ],
            "pad": 0,
            "rot_degree_std_dev": 1
        },
        "questions": 1,
        "cased": true
    },
    "validation": {
        "shuffle": false,
        "batch_size": 3,
        "rescale_range": [
            1,
            1
        ],
        "rescale_to_crop_size_first": true,
        "crop_params": {
            "crop_size": [
                1152,
                768
            ],
            "pad": 0,
            "random": false
        }
    },
    "lr_scheduler_type": "none",
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.0001,
        "weight_decay": 0.01
    },
    "loss": {
        
        "answer": "label_smoothing",
        
        "mask": "focalLoss"
    },
    "loss_weights": {
        "answer": 1,
        "mask": 1,
        "cosine": 0,
        "distillation": 2.5
    },
    "loss_params": {
        
        "answer": {
            "smoothing": 0.1,
            "padding_idx": 1
        }
    },
    "metrics": [],
    "trainer": {
        "class": "QATrainer",
        "iterations": 821056,
        "accum_grad_steps": 64,
        
        
        "save_dir": "saved/",
        "val_step": 10000,
        "save_step": 20000000000,
        "save_step_minor": 1024,
        "log_step": 1024,
        "print_pred_every": 1024,
        "verbosity": 1,
        "monitor": "val_E_ANLS",
        "monitor_mode": "max",
        "retry_count": 0,
        "do_ocr": "no",
        
        "use_learning_schedule": "multi_rise then ramp_to_lower",
        "warmup_steps": [
            1000
        ],
        "lr_down_start": 350000,
        "ramp_down_steps": 10000,
        "lr_mul": 0.1
    },
    "arch": "Dessurt",
    "model": {
        "image_size": [
            1152,
            768
        ],
        
        
        
        
        
        
        
        "window_size": 12,
        "decode_dim": 768,
        "dim_ff": 3072,
        "decode_num_heads": 8,
        "blocks_per_level": [
            4,
            6
        ],
        "use_swin": [
            true,
            true,
            true,
            true,
            true,
            true,
            true,
            true,
            false,
            false
        ],
        "swin_cross_attention": [
            true,
            true,
            true,
            true,
            true,
            true,
            true,
            true,
            false,
            false
        ],
        "swin_nheads": [
            4,
            8
        ],
        "im_embed_dim": 128
    }
}
